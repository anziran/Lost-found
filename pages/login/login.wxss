/* pages/login/login.wxss */
.wrapper{
    display: flex;
    flex-direction: column;
    position: fixed;
    width: 80%;
    top: 30%;
    left: 10%;
}

.loginButton{
  width: 100%;
  height: 35px;
  line-height: 35px;
  font-size: 20px;
  background: linear-gradient(to right, rgb(105, 173, 252) , rgb(77, 134, 248));
  color: black;
  border-radius: 100rpx;
  text-align: center;
  margin-top: 5px;
}
.loginButton::after{
    border: none;
}

.container{
  height: 35px;
  line-height: 35px;
  font-size: 20px;
  background: white;
  color: black;
  border: 1px solid white;
  border-radius: 100rpx;
}