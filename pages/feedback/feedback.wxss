/* pages/feedback/feedback.wxss */
page {
  background-color: #F8F8F8;
  height: 100%;
  line-height: 1.5;
}

.textarea {
  width: 100%;
  height: 100%;
  background-color: white;
  font-size: 15px;
}

.textarea-wrp {
  width: 100%;
  height: 30%;
}

.contact-container{
    display: flex;
    flex-direction: row;
    background-color: white;
    font-size: 15px;
    margin-top: 5px;
    align-items: center;
}

.submitButton{
    background: rgb(129, 207, 238);
    color: white;
    margin: 10px;
    margin-top: 15px;
    border-radius: 15px;
    font-size: 15px;
}
.submitButton::after{
    border: none;
}
.submitButton[disabled] {
    color: white !important;
    background: rgb(219, 215, 215) !important;
}

.count{
    text-align: right;
    background-color: white;
    padding: 5px;
    font-size: 10px;
    color: gray;
    height: 15px;
}