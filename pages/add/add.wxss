/* pages/add/add.wxss */
label{
    
    background-color: rgb(73, 137, 230);
    color: white;
    border-radius: 10px;
    padding: 5px 15px;
    top: 17%;
    left: 8%;
    font-size: 10px;
    position: fixed;
    z-index: 2;
}

.container{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    top: 17%;
    bottom: 105px;
    left: 8%;
    right: 8%;
    background-color: white;
    position: absolute;
    border-radius: 10px;
    font-size: 17px;
    padding: 10px 20px;
    padding-bottom: 15px;
    box-shadow:  -7px -7px 0px white inset, 
                7px -7px 0px white inset, 
                -7px 7px 0px white inset, 
                7px 7px 0px white inset, 
                -8px -8px 0px rgb(79, 135, 248) inset, 
                8px -8px 0px rgb(79, 135, 248) inset, 
                -8px 8px 0px rgb(79, 135, 248) inset, 
                8px 8px 0px rgb(79, 135, 248) inset, 
                0px 12px 0px rgb(242, 246, 254);
}

.caseTextContainer{
    display: flex;
    width: 100%;
    height: 40px;
    line-height: 18px;
    position: fixed;
    bottom: 45px;
    align-items: center;
    flex-direction: column;
}

.upText{
    color: #498BE6;
    font-size: 14px;
}

.downText{
    font-size: 10px;
}

.title{
    display: flex;
    justify-content: space-around;
    padding: 0px 15%;
    padding-bottom: 5px;
}

.selected{
    display: flex;
    color: rgb(23, 119, 252);
    border-bottom: 2px solid rgb(23, 119, 252);
    box-shadow: 0px 4px 0px rgb(233, 237, 247);
    word-break: keep-all;
    flex-wrap: nowrap;
    justify-content: center;
    width: 20px;
    padding-bottom: 5px;
}

.not-selected{
    display: flex;
    word-break: keep-all;
    flex-wrap: nowrap;
    justify-content: center;
    width: 20px;
    padding-bottom: 5px;
}

.submitBtn{
    background: linear-gradient(to right, rgb(105, 173, 252) , rgb(77, 134, 248));
    color: white;
    margin-top: 10px;
    width: 90%;
    border-radius: 20px;
    font-size: 15px;
    line-height: 35px;
    box-shadow: 5px 5px 5px rgb(212, 221, 236);
}
.submitBtn::after{
    border: none;   
}

input{
    border: 2px solid rgba(128, 128, 128, 0.2);
    min-height: 25px;
    max-height: 25px;
}

.upload{
    width: 120rpx;
    height: 120rpx;
    border: 1px solid rgba(128, 128, 128, 0.2);
}

.subtitle{
    border: 2px solid rgba(128, 128, 128, 0.2);
    right: 20px;
    left: 70px; 
    flex: 1;
    height: 25px;
    line-height: 25px;  
    position: absolute;
}

.wrapper{
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: space-between;
    background-color: white;
    margin: 10px 0px;
}